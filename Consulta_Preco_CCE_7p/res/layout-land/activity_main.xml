<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:text="Codigo Interno/Barras"
        android:textSize="40sp" />
    
    <EditText
        android:id="@+id/txtCodigo"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="425dp"
        android:inputType="phone"
        android:textSize="38dp"
        android:selectAllOnFocus="true">

        <requestFocus/>

        </EditText>
    
    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="750dp"
        android:layout_marginTop="0dp"
        android:textSize="35dp"
        android:text="[P]" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="870dp"
        android:layout_marginTop="0dp"
        android:textSize="30dp"
        android:text="[ETQ]" />
    
    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="Descrição"
        android:textSize="40sp" />
    <EditText
        android:id="@+id/txtDescricao"
        android:layout_width="590dp"
        android:layout_height="140dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="90dp"
        android:gravity="start"
        android:textSize="35dp"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/botaoReposicao"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="870dp"
        android:layout_marginTop="320dp"
        android:textSize="30dp"
        android:text="[REP]" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="210sp"
        android:text="Preço"
        android:textSize="40sp" />
    
    <EditText
        android:id="@+id/txtPreco"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320sp"
        android:layout_marginLeft="120sp"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="540sp"
        android:text="Estoque"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/txtEstoque"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320sp"
        android:layout_marginLeft="470sp"
        android:textSize="30dp" 
         />


</RelativeLayout>